{
	"name": "HEIG-VD ProgServ2 Course Development Container",
	"dockerComposeFile": "compose.yaml",
	"service": "devcontainer",
	"runServices": ["plantuml"],
	"workspaceFolder": "/workspace",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"DavidAnson.vscode-markdownlint",
				"esbenp.prettier-vscode",
				"GitHub.copilot",
				"jebbs.plantuml",
				"marp-team.marp-vscode",
				"qwtel.sqlite-viewer",
				"redhat.vscode-yaml",
				"streetsidesoftware.code-spell-checker",
				"streetsidesoftware.code-spell-checker-french",
				"tomoki1207.pdf",
				"yzhang.markdown-all-in-one"
			]
		}
	},
	// Map the user's SSH directory to the container for SSH signing
	"mounts": [
		"type=bind,source=${localEnv:HOME}/.ssh,target=${localEnv:HOME}/.ssh,type=bind,consistency=cached"
	],
	// Ports to expose on the container's network host
	"forwardPorts": [3306, 8080, 9090],
	"portsAttributes": {
		"3306": {
			"label": "MariaDB Database"
		},
		"8080": {
			"label": "Apache HTTP Server"
		},
		"9090": {
			"label": "PlantUML Server"
		}
	},
	// Execute the post-create.sh script once the container is created
	"postCreateCommand": ".devcontainer/post-create.sh",
	// Execute the post-start.sh script once the container is started
	"postStartCommand": ".devcontainer/post-start.sh"
}
